<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="511.0" prefWidth="797.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.sceneControllers.InLobbySceneController">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" spacing="10.0">
            <Label fx:id="lobbyName" text="Lobby">
                <font>
                    <Font name="Arial Black" size="16.0" />
                </font>
            </Label>
            <VBox fx:id="playerNames" />

        </VBox>
        <Button fx:id="startGameButton" layoutX="200.0" layoutY="250.0" mnemonicParsing="false" onAction="#startGame" prefHeight="30.0" prefWidth="150.0" text="Start Game" textFill="#ff0505">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Button>
        <Button fx:id="exitLobbyButton" layoutX="400.0" layoutY="250.0" mnemonicParsing="false" onAction="#exitLobby" prefHeight="30.0" prefWidth="150.0" text="Exit Lobby" textFill="#ff0505">
            <font>
                <Font name="Arial Black" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
